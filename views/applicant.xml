<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="human_resource_applicant_tree_view" model="ir.ui.view">
            <field name="name">human_resource.applicant.tree</field>
            <field name="model">human_resource.applicant</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Họ và tên"/>
                    <field name="email" string="Email"/>
                    <field name="phone_number" string="Số điện thoại"/>
                    <field name="status" string="Trạng thái"/>
                </tree>
            </field>
        </record>

        <record id="human_resource_applicant_act_window" model="ir.actions.act_window">
            <field name="name">Danh sách ứng viên</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">human_resource.applicant</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="human_resource_applicant_tree_view"/>
        </record>
    </data>
</odoo>
