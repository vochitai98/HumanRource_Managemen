<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="human_resource_leave_request_tree_view" model="ir.ui.view">
        <field name="name">human_resource.leave_request.tree</field>
        <field name="model">human_resource.leave_request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id" string="Nhân Viên"/>
                <field name="start_date" string="Ngày Bắt Đầu"/>
                <field name="end_date" string="Ngày Kết Thúc"/>
                <field name="leave_type" string="Loại Nghỉ Phép"/>
                <field name="state" string="Trạng Thái"/>
            </tree>
        </field>
    </record>

    <record id="human_resource_leave_request_act_window" model="ir.actions.act_window">
        <field name="name">Danh sách yêu cầu nghỉ phép</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">human_resource.leave_request</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="human_resource_leave_request_tree_view" />
    </record>
</odoo>
